.wrapper
  color #203864
  font-size 16px
  width 100%
  height 100%
  display flex
  flex-direction column
  padding 0 16px
  box-sizing border-box

main
  max-width 1020px
  width 100%
  position relative
  margin 0 auto

.logo
  margin 0 auto
  position relative
  width 200px
  height auto
  display block

nav
  display flex
  justify-content space-between
  border-bottom 2px #203864 solid
  padding-bottom 12px
  margin-top 16px
  &>*
    width calc(100% / 3)
.tools-list
  display flex
  align-items center
  justify-content flex-end

